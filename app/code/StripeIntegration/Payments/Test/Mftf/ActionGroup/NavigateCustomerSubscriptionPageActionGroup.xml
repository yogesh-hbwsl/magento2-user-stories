<?xml version="1.0" encoding="UTF-8"?>
<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="NavigateCustomerSubscriptionPageActionGroup">
        <!-- Open Customer Stripe Subscription page on storefront -->
        <amOnPage url="{{StorefrontCustomerSubscriptionPage.url}}" stepKey="navigateStorefrontSubscriptionPage"/>
        <waitForPageLoad stepKey="waitPageFullyLoaded"/>
        <seeElement selector="{{StorefrontCustomerSubscriptionSection.subscriptionItemTitleElement}}" stepKey="seeSubscriptionProductTitle"/>
    </actionGroup>
</actionGroups>
